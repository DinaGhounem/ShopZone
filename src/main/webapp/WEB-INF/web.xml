<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterationServlet</servlet-name>
        <servlet-class>jtech.shopzone.view.controller.RegisterationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>jtech.shopzone.view.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowProfileServlet</servlet-name>
        <servlet-class>jtech.shopzone.view.controller.ShowProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <servlet-class>jtech.shopzone.view.controller.UpdateProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>jtech.shopzone.view.controller.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterationServlet</servlet-name>
        <url-pattern>/RegisterationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProfileServlet</servlet-name>
        <url-pattern>/ShowProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <url-pattern>/UpdateProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/CategoryServlet</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>UserSessionCheckerFilter</filter-name>
        <filter-class>jtech.shopzone.view.controller.filters.UserSessionCheckerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserSessionCheckerFilter</filter-name>
        <url-pattern>/home.jsp</url-pattern>
        <url-pattern>/cart.jsp</url-pattern>
        <url-pattern>/checkout.jsp</url-pattern>
        <url-pattern>/UserProfile.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminSessionCheckerFilter</filter-name>
        <filter-class>jtech.shopzone.view.controller.filters.AdminSessionCheckerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminSessionCheckerFilter</filter-name>
        <url-pattern>/adminHome.jsp</url-pattern>
        <url-pattern>/addProduct.jsp</url-pattern>
        <url-pattern>/editProduct.jsp</url-pattern>
        <url-pattern>/Category.jsp</url-pattern>
        <url-pattern>/showUser.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>WelcomePagesFilter</filter-name>
        <filter-class>jtech.shopzone.view.controller.filters.WelcomePagesFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>WelcomePagesFilter</filter-name>
        <url-pattern>/signin.html</url-pattern>
        <url-pattern>/signup.html</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
